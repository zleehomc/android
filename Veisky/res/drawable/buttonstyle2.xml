<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="#FA6400" android:endColor="#FA6400" 
                android:angle="270" />
            <corners android:radius="2dp" /> 
            <padding android:left="30dp" android:top="5dp" 
                android:right="30dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
  
    <item android:state_focused="true"> 
        <shape> 
            <gradient android:startColor="#FF6600" android:endColor="#FF6600" 
                android:angle="270" /> 
            <corners android:radius="2dp" /> 
            <padding android:left="30dp" android:top="5dp" 
                android:right="30dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
  
    <item> 
        <shape> 
            <gradient android:startColor="#FF6600" android:endColor="#FF6600" 
                android:angle="270" />
            <corners android:radius="2dp" /> 
            <padding android:left="30dp" android:top="5dp" 
                android:right="30dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
</selector>  